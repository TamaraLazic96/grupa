{% extends 'base.html.twig' %}

{% block title %}{{ "login.title"|trans|raw }}{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <div class="max-w-md mx-auto my-12 bg-white md:p-6 p-2 shadow-md text-center">
        <h2 class="text-3xl font-bold text-gray-700 mb-6">{{ "login.title"|trans|raw }}</h2>

        <form action="{{ path('app_login') }}" method="post" class="space-y-4">

            <div class="flex flex-col text-left">
                <label for="username" class="font-semibold text-gray-700">{{ "login.email"|trans|raw }}:</label>
                <input type="email" id="username" name="_username" value="{{ last_username }}" required
                       class="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-300">
            </div>

            <div class="flex flex-col text-left">
                <label for="password" class="font-semibold text-gray-700">{{ "login.password"|trans|raw }}:</label>
                <input type="password" id="password" name="_password" required
                       class="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-300">
            </div>

            {# CSRF Token (Uncomment when needed) #}
            {# <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> #}

            <button type="submit"
                    class="w-full bg-amber-300 text-white font-semibold py-2 rounded-lg hover:bg-amber-400 transition duration-300">
                {{ "login.button"|trans|raw }}
            </button>
        </form>
    </div>

{% endblock %}