{% extends 'base.html.twig' %}

{% block title %}{{ "contact.title"|trans|raw }}{% endblock %}

{% block body %}
    <div class="max-w-xl mx-auto my-12 bg-white md:p-6 p-2 shadow-md text-center">
        <h1 class="text-3xl font-bold text-gray-700 mb-6">{{ "contact.title"|trans|raw }}</h1>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 text-green-700 p-3 rounded-md mb-4">{{ message }}</div>
        {% endfor %}

        {{ form_start(contactForm, {'attr': {'class': 'space-y-4'}}) }}

        <div class="flex flex-col text-left">
            {{ form_label(contactForm.name, null, {'label_attr': {'class': 'font-semibold text-gray-700'}}) }}
            {{ form_widget(contactForm.name, {'attr': {'class': 'border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-300'}}) }}
        </div>

        <div class="flex flex-col text-left">
            {{ form_label(contactForm.email, null, {'label_attr': {'class': 'font-semibold text-gray-700'}}) }}
            {{ form_widget(contactForm.email, {'attr': {'class': 'border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-300'}}) }}
        </div>

        <div class="flex flex-col text-left">
            {{ form_label(contactForm.subject, null, {'label_attr': {'class': 'font-semibold text-gray-700'}}) }}
            {{ form_widget(contactForm.subject, {'attr': {'class': 'border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-300'}}) }}
        </div>

        <div class="flex flex-col text-left">
            {{ form_label(contactForm.message, null, {'label_attr': {'class': 'font-semibold text-gray-700'}}) }}
            {{ form_widget(contactForm.message, {'attr': {'class': 'border border-gray-300 rounded-lg px-4 py-2 h-32 resize-none focus:outline-none focus:ring-2 focus:ring-amber-300'}}) }}
        </div>

        <div>
            {{ form_widget(contactForm.submit, {'attr': {'class': 'w-full bg-amber-300 text-white font-semibold py-2 rounded-lg hover:bg-amber-400 transition duration-300'}}) }}
        </div>

        {{ form_end(contactForm) }}
    </div>
{% endblock %}