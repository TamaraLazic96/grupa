{% extends 'base.html.twig' %}

{% block title %}{{ "register.title"|trans|raw }}{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto my-12 bg-white md:p-6 p-2 shadow-md text-center">
        <h1 class="text-3xl font-bold text-gray-700 mb-6">{{ "register.title"|trans|raw }}</h1>

        <!-- Flash message for errors -->
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, { 'attr': {'class': 'space-y-4'} }) }}

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex flex-col text-left">
                {{ form_label(form.firstName, null, { 'label_attr': {'class': 'font-semibold text-gray-700'} }) }}
                {{ form_widget(form.firstName, { 'attr': {'class': 'border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-400'} }) }}
                {{ form_errors(form.firstName, { 'attr': {'class': 'text-red-500 text-sm'} }) }}
            </div>

            <div class="flex flex-col text-left">
                {{ form_label(form.lastName, null, { 'label_attr': {'class': 'font-semibold text-gray-700'} }) }}
                {{ form_widget(form.lastName, { 'attr': {'class': 'border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-400'} }) }}
                {{ form_errors(form.lastName, { 'attr': {'class': 'text-red-500 text-sm'} }) }}
            </div>
        </div>

        <div class="flex flex-col text-left">
            {{ form_label(form.username, null, { 'label_attr': {'class': 'font-semibold text-gray-700'} }) }}
            {{ form_widget(form.username, { 'attr': {'class': 'border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-300'} }) }}
            {{ form_errors(form.username, { 'attr': {'class': 'text-red-500 text-sm'} }) }}
        </div>

        <div class="flex flex-col text-left">
            {{ form_label(form.email, null, { 'label_attr': {'class': 'font-semibold text-gray-700'} }) }}
            {{ form_widget(form.email, { 'attr': {'class': 'border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-300'} }) }}
            {{ form_errors(form.email, { 'attr': {'class': 'text-red-500 text-sm'} }) }}
        </div>

        <div class="flex flex-col text-left">
            {{ form_label(form.password, null, { 'label_attr': {'class': 'font-semibold text-gray-700'} }) }}
            {{ form_widget(form.password, { 'attr': {'class': 'border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-300'} }) }}
            {{ form_errors(form.password, { 'attr': {'class': 'text-red-500 text-sm'} }) }}
        </div>

        <div class="flex flex-col text-left">
            {{ form_label(form.confirmPassword, null, { 'label_attr': {'class': 'font-semibold text-gray-700'} }) }}
            {{ form_widget(form.confirmPassword, { 'attr': {'class': 'border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-300'} }) }}
            {{ form_errors(form.confirmPassword, { 'attr': {'class': 'text-red-500 text-sm'} }) }}
        </div>

        <button type="submit"
                class="w-full bg-amber-300 text-white font-semibold py-2 rounded-lg hover:bg-amber-400 transition duration-300">
            {{ "register.button"|trans|raw }}
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
