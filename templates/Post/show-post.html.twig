{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% set fullImageUrl = app.request.schemeAndHttpHost ~ asset('uploads/posts/' ~ post.thumbnail) %}

{% block og_title %}{{ post.title }}{% endblock %}
{% block og_description %}{{ post.content|striptags|slice(0, 160) }}{% endblock %}
{% block og_image %}{{ fullImageUrl }}{% endblock %}
{% block og_type %}article{% endblock %}

{% block twitter_title %}{{ post.title }}{% endblock %}
{% block twitter_description %}{{ post.content|striptags|slice(0, 160) }}{% endblock %}
{% block twitter_image %}{{ fullImageUrl }}{% endblock %}

{% block meta_description %}{{ post.content|striptags|slice(0, 160) }}{% endblock %}

{% block body %}
    <div class="max-w-3xl m-auto md:p-0 p-2 text-center">
        <img class="w-full h-auto max-h-96 object-cover" src="{{ asset('uploads/posts/' ~ post.thumbnail) }}"
             alt="{{ post.title }}">
        <h1 class="text-3xl font-bold my-5">{{ post.title }}</h1>
        <div class="text-lg md:text-justify text-left">
            {{ post.content|raw }}
        </div>
    </div>
{% endblock %}